{
    "name": "tacocat-gallery-sveltekit",
    "version": "0.0.10",
    "private": true,
    "description": "Javascript front end for the tacocat.com photo gallery, built with Sveltekit",
    "keywords": [
        "javascript",
        "typescript",
        "svelte",
        "sveltekit"
    ],
    "license": "MIT",
    "author": "Dean Moses",
    "repository": {
        "type": "git",
        "url": "git://github.com/deanmoses/tacocat-gallery-sveltekit"
    },
    "scripts": {
        "dev": "vite dev",
        "build-debug": "vite build --mode development --sourcemap true --minify false",
        "build": "vite build",
        "preview": "vite preview",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:staging": "BASE_URL=https://staging-pix.tacocat.com playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "quality": "npm run format && npm run lint && npm run check",
        "deploy-staging": "./deploy_staging.sh",
        "deploy-prod": "./deploy_prod.sh",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@playwright/test": "1.50.1",
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/kit": "^2.17.2",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "@zerodevx/svelte-toast": "^0.9.6",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-svelte": "^2.46.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.5.1",
        "prettier-plugin-svelte": "^3.3.3",
        "svelte": "^5.20.1",
        "svelte-check": "^4.1.4",
        "svelte-eslint-parser": "^0.43.0",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.1.0",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "idb-keyval": "^6.2.1",
        "immer": "^10.1.1",
        "quill": "^2.0.3",
        "svelte-easy-crop": "^4.0.0"
    },
    "engineStrict": true,
    "engines": {
        "node": ">=24.0.0"
    },
    "type": "module",
    "lint-staged": {
        "*.{js,mjs,ts,svelte,json,css,html,md,yml,yaml}": "prettier --write",
        "*.{js,mjs,ts,svelte}": "eslint --fix"
    }
}
