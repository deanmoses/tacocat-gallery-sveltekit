{
    "name": "tacocat-gallery-sveltekit",
    "version": "0.0.10",
    "private": true,
    "description": "Javascript front end for the tacocat.com photo gallery, built with Sveltekit",
    "keywords": [
        "javascript",
        "typescript",
        "svelte",
        "sveltekit"
    ],
    "license": "MIT",
    "author": "Dean Moses",
    "repository": {
        "type": "git",
        "url": "git://github.com/deanmoses/tacocat-gallery-sveltekit"
    },
    "scripts": {
        "dev": "vite dev",
        "build-debug": "vite build --mode development --sourcemap true --minify false",
        "build": "vite build",
        "preview": "vite preview",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:staging": "BASE_URL=https://staging-pix.tacocat.com playwright test",
        "test:e2e:prod": "BASE_URL=https://pix.tacocat.com playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "quality": "npm run format && npm run lint && npm run check",
        "precommit": "npm run quality && npm run test:unit",
        "deploy-staging": "./deploy_staging.sh",
        "deploy-prod": "./deploy_prod.sh",
        "agent-docs": "node scripts/build-agent-docs.mjs",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@playwright/test": "1.57.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.49.4",
        "@types/node": "^24.0.0",
        "@zerodevx/svelte-toast": "^0.9.6",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-svelte": "^3.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.46.1",
        "svelte-check": "^4.3.5",
        "svelte-eslint-parser": "^1.4.1",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vite": "^7.3.1",
        "vitest": "^4.0.17"
    },
    "dependencies": {
        "idb-keyval": "^6.2.2",
        "immer": "^11.1.3",
        "quill": "^2.0.3",
        "svelte-easy-crop": "^5.0.0"
    },
    "engineStrict": true,
    "engines": {
        "node": ">=24.0.0"
    },
    "type": "module",
    "lint-staged": {
        "*.{js,mjs,ts,svelte,json,css,html,md,yml,yaml}": "prettier --write",
        "*.{js,mjs,ts,svelte}": "eslint --fix"
    }
}
