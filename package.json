{
    "name": "tacocat-gallery-sveltekit",
    "version": "0.0.10",
    "private": true,
    "description": "Javascript front end for the tacocat.com photo gallery, built with Sveltekit",
    "keywords": [
        "javascript",
        "typescript",
        "svelte",
        "sveltekit"
    ],
    "license": "MIT",
    "author": "Dean Moses",
    "repository": {
        "type": "git",
        "url": "git://github.com/deanmoses/tacocat-gallery-sveltekit"
    },
    "scripts": {
        "dev": "vite dev",
        "build-debug": "vite build --mode development --sourcemap true --minify false",
        "build": "vite build",
        "preview": "vite preview",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "test:e2e": "playwright test",
        "test": "npm run test:unit && npm run test:e2e",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier . --check . && eslint .",
        "format": "prettier . --write .",
        "deploy-staging": "./deploy_staging.sh",
        "deploy-prod": "./deploy_prod.sh"
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "@playwright/test": "1.53.0",
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/kit": "^2.21.5",
        "@testing-library/svelte": "^5.2.8",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "@zerodevx/svelte-toast": "^0.9.6",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-svelte": "^3.9.2",
        "jsdom": "^26.1.0",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.4.0",
        "svelte": "^5.34.3",
        "svelte-check": "^4.2.1",
        "svelte-eslint-parser": "^1.2.0",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0",
        "vite": "^6.3.5",
        "vite-plugin-devtools-json": "^0.2.0",
        "vitest": "^3.2.3"
    },
    "dependencies": {
        "idb-keyval": "^6.2.2",
        "immer": "^10.1.1",
        "quill": "^2.0.3",
        "svelte-easy-crop": "^4.0.1"
    },
    "engineStrict": true,
    "engines": {
        "node": ">=23.5.0"
    },
    "type": "module"
}
